@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Markets";
}

@section Styles {
    <link rel="stylesheet" href="~/Styles/dashboard/home.css" asp-append-version="true" />
}

<div class="container-fluid">
    <h1 class="text-center mt-4 mb-4">Market Overview</h1>

    <!-- First Row: US Markets and Top Cryptocurrencies -->
    <div class="row">
        <div class="col-md-6">
            <h2>US Markets</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Index</th>
                        <th>Change %</th>
                        <th>Change</th>
                        <th>High</th>
                        <th>Low</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Dow Jones</td>
                        <td>33,981</td>
                        <td>-0.37%</td>
                        <td>-126.15</td>
                        <td>34,111</td>
                        <td>33,907</td>
                    </tr>
                    <tr>
                        <td>NASDAQ</td>
                        <td>12,033</td>
                        <td>+0.55%</td>
                        <td>+66.36</td>
                        <td>12,100</td>
                        <td>11,940</td>
                    </tr>
                    <tr>
                        <td>S&P 500</td>
                        <td>4,204</td>
                        <td>-0.22%</td>
                        <td>-9.22</td>
                        <td>4,220</td>
                        <td>4,180</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h2>Top Cryptocurrencies</h2>
            <table class="table" id="cryptocurrenciesTable">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th>Price</th>
                        <th>Volume</th>
                        <th>Change %</th>
                        <th>Market Cap</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewData["TopCryptocurrencies"] != null)
                    {
                        var topCryptocurrencies = ViewData["TopCryptocurrencies"] as IEnumerable<Invetker.Models.AssetActivityDto>;
                        if (topCryptocurrencies != null && topCryptocurrencies.Any())
                        {
                            foreach (var item in topCryptocurrencies)
                            {
                                <tr>
                                    <td>@item.Symbol</td>
                                    <td>$@item.Price</td>
                                    <td>@item.Volume</td>
                                    <td>@String.Format("{0:P2}", item.PriceChangeP)</td>
                                    <td>$@String.Format("{0:n0}", item.MarketCap)</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No data available</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>


